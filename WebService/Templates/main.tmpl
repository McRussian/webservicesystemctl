<html>
    <head>
        <title>aiohttp page</title>
    </head>
    <body>
        <div>
            <h1><a href="/">My WebSystemctl Server</a></h1>
        </div>

        <div>
            <p>Date now: {{ current_date }}</p>
            <h1>List of Service</h1>
             <table style="width:100%">
                <tr>
                    <th>Active</th>
                    <th>Servicename</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>

               {% for service in ls_service %}
                <tr>
                    <th>Active</th>
                    <th>{{ service.name }}</th>
                    <th>{{ service.description }}</th>
                    <th>{{ service.status }}</th>
                </tr>
                {% endfor %}
            </ul>
        </div>
    </body>
</html>
